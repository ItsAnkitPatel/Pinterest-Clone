<%include ./partials/header.ejs%>
<main class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
  <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
    <input type="file" name="image" />
  </form>
  <section class="profdetails flex flex-col items-center mt-20">
    <div class="relative">
      <span
        id="uploadicon"
        class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200 hover:bg-zinc-500"
      >
        <i class="text-zinc-800 ri-pencil-fill"></i>
      </span>
      <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
        
        <img
          src="/images/profileImages/<%=user.profileImage%>"
          class="object-cover"
          alt="profile picture"
        />
      </div>
    </div>
    <h1 class="text-3xl font-semibold mt-5"><%=user.fullname%></h1>
    <h3 class="text-md">@<%=user.username%></h3>
    <a
      href="/edit"
      class="mt-5 px-7 py-2 bg-zinc-700 font-semibold text-xs rounded-full"
      >Edit</a
    >
    <a href="/addpost"
      class="px-10 py-2 text-xs font-semibold bg-red-700 rounded-lg mt-10"
    >
      Add new post
    </a>
  </section>
  <section class="cards flex flex-wrap gap-10 px-10 mt-10">
    <div class="card">
      <a href="/showposts" class="block w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
        <img
          src="/images/postImages/<%= user.posts[0]?.image %>"
          class="w-full h-full object-cover"
          alt=""
        />
      </a>
      <a href="/showposts" class="inline-block hover:underline text-xl font-semibold mt-3">Your Uploaded Pins</a>
      <h5 class="text-medium font-semibold opacity-60"><%= user.posts.length%> pins</h5>
    </div>
  </section>
</main>
<script>
  const uploadimage = document.querySelector("#uploadform input");
  document.querySelector("#uploadicon").addEventListener("click", function () {
    uploadimage.click();
  });

  uploadimage.addEventListener("change", function () {
    document.querySelector("#uploadform").submit();
  });
</script>
<%include ./partials/footer.ejs%>

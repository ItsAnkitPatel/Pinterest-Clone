<%include ./partials/header%>

<div
  class="w-full h-screen bg-center bg-[url('https://images.unsplash.com/photo-1618576980905-8b704806a39b?q=80&w=1915&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center"
>
  <div class="w-[32vw] bg-white px-20 py-20 rounded-[30px]">
    <h1
      class="text-4xl mb-5 capitalize text-center text-zinc-700 tracking-tighter leading-none"
    >
      Create New Account
    </h1>
    <form action="/register" method="post">
      <input
        class="border-2 rounded-md mt-2 w-full px-3 py-2"
        type="text"
        name="fullname"
        placeholder="fullname"
      />
      <input
        class="border-2 rounded-md mt-2 w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="border-2 rounded-md mt-2 w-full px-3 py-2"
        type="email"
        name="email"
        placeholder="email"
      />
      <input
        class="border-2 rounded-md mt-2 w-full px-3 py-2"
        type="number"
        name="contact"
        placeholder="contact"
      />
      <input
        class="border-2 rounded-md mt-2 w-full px-3 py-2"
        type="password"
        name="password"
        placeholder="password"
      />
      <input
        class="border-2 mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full"
        type="submit"
        value="Sign Up"
      />
      <p
        class="text-xs text-zinc-500 mt-7 font-semibold text-center w-3/4 mx-auto"
      >
        By continuing, you agree to Pinterest's Terms of Service; Opens a new
        tab and acknowledge that you've read our Privacy Policy; Opens a new
        tab. Notice at collection;
      </p>
    </form>
    <a
      href="/"
      class="w-full inline-block mt-2 text-sm text-center text-zinc-700 font-semibold hover:underline"
      >Login Existing Account</a
    >
  </div>
</div>
<%include ./partials/footer%>
